int factorial (int z);
float potencial(float z, int exp);

int main()
{
	int x,n,i;
    int p,s;
 
  cout<<"ingrese x:";
  cin>>x;
  cout<<"ingrese n:";
  cin>>n;
s=0;
    for (i=1;i<=n;i++)
	 
           s=s+potencial(x,i)/factorial(i);
cout<<"el resultado de la suma es:";
cout<<s;

getch();
	return 0;
}
 
   int factorial(int z)
   {
	int i;
    int p=1;
    for(i=1;i<=z;i++)
	
		p=p*i;
	
   return p;
   }
    float potencial(float z, int exp)
  {  int i;
    float p=1;
       for(i=1;i<=exp;i++)
		   p=p*z;
	   return p;
  }
