#include "stdafx.h"
#include <iostream>
#include "math.h"
#include "conio.h"

using namespace std;


int main()
{int lado1,lado2,lado3;

float S,Area;

cin >> lado1;
cin >> lado2;
cin >> lado3;

S= (lado1+lado2+lado3)/2.0;

Area= sqrt(S*(S-lado1)*(S-lado2)*(S-lado3));

cout << Area;
getch ();

return 0;



}
